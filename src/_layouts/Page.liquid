<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="UTF-8">

    <!-- title -->
    {% if title == null %}
      {% assign title = section | camelize %}
      {% if name != null %}
        {% assign title = title | append: " - " | append: name %}
      {% endif %}
    {% endif %}

    <!-- page -->
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- favicon -->
    <link
      rel="shortcut icon"
      type="image/png"
      href="/img/favicon.png"
    >

    <!-- preview -->
    {% assign previewTitle = "boshi's place" %}
    {% assign host = "https://boshis.place" %}

    {% if section != "events" %}
      {% assign previewTitle = previewTitle | append: " - " | append: title %}
    {% endif %}

    <link rel="canonical" href="{{host}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{host}}{{page.url}}">
    <meta property="og:site_name" content="boshi's place">
    <meta property="og:title" content="{{previewTitle}}">
    <meta property="og:description" content="{{description}}">
    <meta property="og:image" content="{{host}}/img/{{image}}">
    <meta property="og:image:width" content="488">
    <meta property="og:image:height" content="488">

    <!-- assets -->
    <link rel="stylesheet" href="/site.css">
    <script type="module" src="/site.js"></script>
  </head>

  <body>
    <div id="page" class="Page {{ section | camelize }}">
      <main class="Page-content">
        {{ content }}
      </main>
    </div>

    {% if noNav == null %}
      {% render "nav/Nav" %}
    {% endif %}

    <div id="loading" class="Loading"></div>
  </body>
</html>
